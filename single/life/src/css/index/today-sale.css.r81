}
.Product-Content .Commodity .title .s2 {
  color: #008de1;
}
.Product-Content .Commodity .commodity-lists .liActive {
  border-color: #ff6c00;
}
.Product-Content .Commodity .commodity-lists > li {
  display: inline-block;
  width: 218px;
  border: 1px solid #e1e1e1;
  margin: 10px 5px;
}
.Product-Content .Commodity .commodity-lists > li > a {
  display: inline-block;
}
.Product-Content .Commodity .commodity-lists > li > a .detail {
  background: #FFFFFF;
  padding: 16px;
  font-size: 14px;
  color: #666666;
}
.Product-Content .Commodity .commodity-lists > li > a .detail .price {
  margin-top: 10px;
}
.Product-Content .Commodity .commodity-lists > li > a .detail .price .nowPrice {
  font-size: 18px;
