.Carousel-figure {
  position: relative;
  height: 362px;
  width: 100%;
  overflow: hidden;
}
.Carousel-figure .Carousel-figure-slide {
  position: absolute;
  width: 100%;
  height: 362px;
  top: 0;
  left: 0;
}
.Carousel-figure .Carousel-figure-slide > a {
  width: 100%;
  height: 362px;
  position: absolute;
  top: 0;
}
.Carousel-figure .Carousel-figure-slide > a > img {
  height: 100%;
}
.Carousel-figure .slideBtn {
  position: absolute;
  left: 50%;
  bottom: 20px;
  margin-left: -30.5px;
}
.Carousel-figure .slideBtn li {
  width: 15px;
  height: 15px;
  background-color: #323333;
  display: inline-block;
  border-radius: 50%;
  cursor: pointer;
}
.Carousel-figure .slideBtn .center {
  margin: 0 5px;
}
.Carousel-figure .slideBtn .sildeActive {
  background-color: #ff6c00;
}
#mainContent {
  background: #f2f2f2;
  padding-bottom: 40px;
}
.Product-Content {
  width: 1181px;
  margin: 20px auto 0;
}
.Product-Content .Flash-sale .title {
  font-size: 18px;
  margin-bottom: 30px;
}
.Product-Content .Flash-sale .title .s1,
.Product-Content .Flash-sale .title .s2 {
  font-size: 36px;
  color: #fd823e;
}
.Product-Content .Flash-sale .title .s2 {
  color: #008de1;
}
.Product-Content .Flash-sale .item-select-wrap {
  position: relative;
  height: 391px;
  overflow: hidden;
}
.Product-Content .Flash-sale .item-select-wrap .leftBtn,
.Product-Content .Flash-sale .item-select-wrap .rightBtn {
  position: absolute;
  top: 130px;
  z-index: 10;
  width: 56px;
  height: 96px;
  background-color: rgba(109, 109, 109, 0.5);
  background-image: url(../../img/todaysale-icon.png);
  background-repeat: no-repeat;
  cursor: pointer;
}
.Product-Content .Flash-sale .item-select-wrap .leftBtn {
  left: -96px;
  background-position: -61px 25px;
}
.Product-Content .Flash-sale .item-select-wrap .rightBtn {
  right: -96px;
  background-position: 15px 25px;
}
.Product-Content .Flash-sale .item-select-wrap .item-select-lists {
  position: absolute;
  left: 0;
  top: 0;
}
.Product-Content .Flash-sale .item-select-wrap .item-select-lists > li {
  position: absolute;
  width: 278px;
  border: 1px solid #e1e1e1;
}
.Product-Content .Flash-sale .item-select-wrap .item-select-lists > li > a {
  display: block;
}
.Product-Content .Flash-sale .item-select-wrap .item-select-lists > li > a h3 {
  height: 45px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.Product-Content .Flash-sale .item-select-wrap .item-select-lists > li > a .detail {
  background: #FFFFFF;
  padding: 16px;
  font-size: 14px;
  color: #666666;
}
.Product-Content .Flash-sale .item-select-wrap .item-select-lists > li > a .detail .price {
  margin-top: 10px;
}
.Product-Content .Flash-sale .item-select-wrap .item-select-lists > li > a .detail .price .nowPrice {
  font-size: 18px;
  color: #ea0000;
}
.Product-Content .Flash-sale .item-select-wrap .item-select-lists > li > a .detail .price .beforePrice {
  text-decoration: line-through;
  margin-left: 6px;
}
.Product-Content .Commodity {
  margin-top: 20px;
}
.Product-Content .Commodity .title {
  font-size: 18px;
