}
.select_page {
  text-align: center;
  margin-top: 30px;
}
.select_page span {
  display: inline-block;
  width: 37px;
  height: 34px;
  border: 1px solid #ccc;
  font-size: 15px;
  line-height: 34px;
  text-align: center;
  border-left: 0px;
}
.select_page div {
  display: inline-block;
  font-size: 15px;
}
.select_page span.active {
  background-color: #008de1;
  color: #fff;
}
.select_page .home_page {
  width: 65px;
  height: 34px;
  border: 1px solid #ccc;
  font-size: 15px;
  line-height: 34px;
  text-align: center;
  color: #008DE1;
  margin-left: 111px;
}
.select_page .previous_page {
  width: 65px;
  height: 34px;
  border: 1px solid #ccc;
  font-size: 15px;
  line-height: 34px;
  text-align: center;
  color: #008DE1;
  margin-left: 111px;
  width: 90px;
  margin-left: 20px;
  color: #333333;
  cursor: pointer;
}
.select_page .next_page {
  width: 65px;
  height: 34px;
  border: 1px solid #ccc;
  font-size: 15px;
  line-height: 34px;
  text-align: center;
  color: #008DE1;
  margin-left: 111px;
  width: 90px;
  margin-left: 20px;
  color: #333333;
  margin-left: 0;
  border-left: 0px;
  margin-right: 20px;
  cursor: pointer;
}
.select_page .select_page_border {
  -webkit-appearance: none;
  width: 50px;
  height: 34px;
  line-height: 34px;
  margin-left: 5px;
  border: 1px solid #ccc;
  margin-right: 5px;
  vertical-align: middle;
}
.select_page .confirm_btn {
  display: inline-block;
  width: 90px;
  height: 34px;
  background-color: #008DE1;
  line-height: 34px;
  font-size: 15px;
  color: #fff;
  text-align: center;
  border-radius: 5px;
  margin-left: 20px;
}
.select_page .sum_page {
  color: #666;
  margin-left: 14px;
}
#footer {
  margin-top: 0;
}
